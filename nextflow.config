executor {
    $slurm {
        account = "biol-imaging-2024"
        queueSize = 1000
    }
}
process {
    withLabel: slurm {
        executor = 'slurm'
        errorStrategy = { task.exitStatus in [125, 140] ? 'retry' : 'finish' }
        maxRetries = 3
        cpus = 1
    }

    withLabel: local {
        executor = 'local'
    }
}
